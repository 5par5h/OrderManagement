@model OrderManagement.Models.Login
@{
    ViewBag.Title = "Login";
}

<h2>Login</h2>

<body>
    <div class="limiter">
        <div class="container-login100">
            <div class="wrapper">
                <div class="wrap-content">
                    <div>
                        <form class="login100-form validate-form" id="loginform">
                            <div class="form-group text-center">
                                <i class="fa fa-envelope" style="padding-left:2px"></i>
                                @Html.TextBoxFor(m => m.email_address, new { @name = "txtemail", @id = "txtemail", @class = "form-control custom-input", @placeholder = "Email Address" })
                                @Html.ValidationMessageFor(m => m.email_address, "", new { @class = "text-danger text-small" })
                            </div>
                            <div class="form-group text-center">
                                <i class="fa fa-lock" style="padding-left:2px"></i>
                                @Html.PasswordFor(m => m.password, new { @name = "txtPassword", @id = "txtPassword", @class = "form-control", @placeholder = "Password" })
                                @Html.ValidationMessageFor(m => m.password, "", new { @class = "text-danger text-small" })
                            </div>

                            <div class="form-group">
                                <button asp-controller="Login" asp-action="ProcessLogin" class="btn login100-form-btn">Login</button>
                            </div>

                            <div class="form-group">
                                <a class="txt1" href="#">
                                    Register New User
                                </a>
                                &nbsp;&nbsp;
                                <a class="txt1" href="#">
                                    Forgot Password?
                                </a>
                            </div>

                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>

